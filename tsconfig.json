{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "#/public/*": [
        "src/public/*"
      ],
      "#/shared/*": [
        "src/shared/*"
      ],
      "#/components/*": [
        "src/shared/ui/*"
      ],
      "#/lib/*": [
        "src/shared/lib/*"
      ],
      "#/widgets/*": [
        "src/widgets/*"
      ],
      "#/entities/*": [
        "src/entities/*"
      ]
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noErrorTruncation": true,
    "incremental": true,
    "typeRoots": [
      "@types/*",
      "node_modules/@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "@types/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "**/*.config.ts",
    "tailwind.config.ts",
    "postcss.config.js",
    ".eslintrc.js",
    "build/types/**/*.ts",
    "build/dev/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "coverage",
    "node_modules",
    "build"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node"
    }
  }
}
